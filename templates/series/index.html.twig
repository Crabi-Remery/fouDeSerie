{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Retrouvez les {{nombreSeries.nombre}} séries de fou de séries</h1>
    {% for serie in lesSeries %}
        <img src={{serie.image}} style="height:400px"></img>
        <li>Titre : {{ serie.titre }}</li>
        <li>Synopsis : {{ serie.resume }}</li>
        <li>Durée : {{ serie.duree }} minutes</li>
        <li>Première diffusion : {{ serie.premiereDiffusion }}</li>
        <br>
    {% endfor %}
</div>
{% endblock %}
